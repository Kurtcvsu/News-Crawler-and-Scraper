AI Keywords + Explanations
    "artificial intelligence",  # General AI term (broad coverage)
    "AI",                       # Short AI acronym (appears everywhere)
    "machine learning",         # AI subset (data training)
    "neural",                   # Neural networks (AI brain structure)
    "GPT",                      # OpenAI's ChatGPT models (GPT-4o, GPT-5)
    "model",                    # AI trained system (broad but common)
    "LLM",                      # Large Language Model (big AI brains)
    "deep learning",            # Advanced neural networks
    "transformer",              # Core AI architecture behind GPT/Llama
    "Philippines",              # PH location filter
    "Llama",                    # Meta's open-source AI models (Llama 3.1)
    "Gemini",                   # Google's AI model family (Gemini 2.0)
    "Claude",                   # Anthropic's AI chatbot models
    "ChatGPT",                  # OpenAI's popular AI chatbot
    "fine-tune",                # Training AI on specific data (custom AI)
    "RAG",                      # Retrieval-Augmented Generation (AI + search)
    "NAIS",                     # National AI Strategy (Philippines)
    "DOST AI"                   # Department of Science & Tech AI projects (PH)

CYBERSECURITY Keywords + Explanations
   "cybersecurity",            # General cybersecurity term
    "security",                 # Broad security term (needs context)
    "vulnerability",            # Software weakness hackers exploit
    "breach",                   # Data leak/exposure incident
    "malware",                  # Malicious software (viruses, trojans)
    "exploit",                  # Hacker code using vulnerabilities
    "ransomware",               # Malware locking files for ransom
    "hacking",                  # Unauthorized system access
    "cyber",                    # Cyber prefix (cyber attack, cyber war)
    "threat",                   # Security danger/risk
    "Philippines",              # PH location filter
    "LockBit",                  # Famous ransomware gang (hospitals/banks)
    "Conti",                    # Ransomware group (Russian hackers)
    "Emotet",                   # Banking malware (steals passwords)
    "Qakbot",                   # Malware used in ransomware attacks
    "BlackCat",                 # Ransomware group (ALPHV/BlackCat)
    "zero-day",                 # Unknown software bug (first exploit)
    "APT",                      # Advanced Persistent Threat (state hackers)
    "Cobalt Strike",            # Hacker tool for network infiltration
    "CIRT",                     # Cybercrime Investigation Response Team (PH)
    "DICT-CERT",                # Philippines CERT team (govt cybersecurity)
    "PNP-ACG"                   # PNP Anti-Cybercrime Group (PH police)

